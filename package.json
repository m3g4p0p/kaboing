{
	"name": "kabap",
	"scripts": {
		"build": "esbuild --bundle src/main.js --outfile=www/main.js --minify",
		"dev": "esbuild --bundle --sourcemap --keep-names src/main.js --outfile=www/main.js --servedir=www --format=esm",
		"bundle": "npm run build && mkdir -p dist && zip -r dist/game.zip www -x \"**/.DS_Store\""
	},
	"dependencies": {
		"kaplay": "^3001.0.0-alpha.17"
	},
	"devDependencies": {
		"esbuild": "^0.23.0",
		"standard": "^17.1.0"
	}
}
